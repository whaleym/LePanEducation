/**index.wxss**/
.search{
  margin: 20rpx 20rpx auto;
  background-color: white;
  border: 1px solid #d0d0d0;  
  border-radius: 50rpx;
}

.search icon {
  position: absolute;
  margin-top: 18rpx;
  margin-left: 20rpx;
  z-index: 2;
}

.search input{
  margin-left: 75rpx;
  height: 60rpx;
  font-size: 15px;
}

.swiper-list{
  width: 100%;
  height: 500rpx;
  margin-top: 40rpx;
  text-align: center;
}

.swiper-list image{
  width: 95%;
  height: 100%;
  border-radius: 10rpx;
}

.title {
  margin-top: 40rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-indent: 30rpx;
  background-color: white;
}

.category-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.category-item {
  width:33%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

.categoryitem-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.categoryitem-name {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-family: '微软雅黑';
  color: red;
}

.goods-list {
  margin-top: 40rpx;
}

.goods-view {
  width:46%;
  height:320rpx;
  margin-left:20rpx;
  margin-bottom: 40rpx;
  float: left;
  position: relative;
  background-color: gainsboro;
}

.goods-signup {
  position: absolute;
}

.goods-signup image{
  width:76rpx;
  height:42rpx;
}

.goods-img {
  width: 100%;
  height: 180rpx;
}

.goods-img image {
  width: 100%;
  height: 100%;
}

.goods-title {
  margin-top: 15rpx;
  font-size:32rpx;
  font-family: '微软雅黑';
}

.goods-info{
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
  height:40rpx;
}

.goods-price {
  font-size: 28rpx;
  font-family: '微软雅黑';
  color: red;
}

.goods-cart{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  margin-left: 80%;
}

.goods-cart image {
  width: 50rpx;
  height: 50rpx;
}