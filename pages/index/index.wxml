<!--index.wxml-->
<view class='search' bindtap='tapToSearchPage'>
  <icon type='search' size='15'/>
  <input disabled placeholder='请输入要搜索的内容' />
</view>

<swiper class='img_swiper' indicator-dots autoplay='true' interval='5000' bindchange='onImgSwiperChange'>
  <block wx:for='{{imgUrls}}' wx:key='index'>
    <swiper-item>
      <image src='{{item.url}}' bindtap='tapImgSwiper'/>
    </swiper-item>
  </block>
</swiper>