<!--index.wxml-->
<view class='search' bindtap='tapToSearchPage'>
  <icon type='search' size='15'/>
  <input disabled placeholder='请输入要搜索的内容' />
</view>

<swiper class='img_swiper' indicator-dots='true' autoplay='true' interval='3000'>
  <block wx:for='{{imgUrls}}'>
    <swiper-item>
      <image src='{{item}}' />
    </swiper-item>
  </block>
</swiper>