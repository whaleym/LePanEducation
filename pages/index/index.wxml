<!--index.wxml-->
<view class='search' bindtap='tapToSearchPage'>
  <icon type='search' size='15'/>
  <input disabled placeholder='请输入要搜索的内容' />
</view>

<swiper class='swiper-img' indicator-dots autoplay='true' interval='5000' bindchange='onImgSwiperChange'>
  <block wx:for='{{swiperImgUrls}}' wx:key='index'>
    <swiper-item>
      <image src='{{item.url}}' bindtap='tapImgSwiper'/>
    </swiper-item>
  </block>
</swiper>

<view class='item-list'>
  <block wx:for='{{itemList}}' wx:key='index'>
    <view class='item-view' bindtap='tapToDetails'>
      <view class="item-signup">
        <image src="{{item.signupimg}}"></image>
      </view>
      <view class='item-img'>
        <image src='{{item.img}}' />
      </view>
      <view class="item-title">
         <text>{{item.title}}</text>  
      </view>
      <view class="item-info">
        <view class="item-price">￥{{item.price}}</view>
        <view class="item-icon" bindtap='addToCart'>
          <image src="{{iconsrc}}"></image>
        </view>
      </view>
    </view>
  </block>
</view>